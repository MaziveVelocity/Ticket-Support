{{!-- I added the ticket id on line 8 so that it can be traced as to which item is being edited or deleted.
--}}
<ol class="post-list">
    {{#each tickets as |ticket|}}
    <li>
        <div class="ticket" >
            <div class="ticket-info" id="{{ticket.id}}">
                <div class="flex-wrap left-side">
                    <p class="title">Title: {{ticket.title}</p>
                    <p class="requestor">Requestor: {{ticket.user}}</p>
                    <textarea id="description" readonly>

                    </textarea>
                </div>
                <div class="flex-wrap right-side">
                    <p class="info" id="date">Submission Date: {{ticket.date}}</p>
                    <p class="info">Type: {{ticket.category}}</p>
                    <p class="info">Status: {{ticket.status}}</p>
                    <button type="submit" class="button">
                        Delete
                    </button>
                    <button type="submit" class="button">
                        Edit
                    </button>
                </div>
            </div>
        </div>
    </li>
    {{/each}}
</ol>